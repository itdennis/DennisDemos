<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vsm="clr-namespace:System.Windows"
                    xmlns:local="clr-namespace:AvePoint.Migrator.Common.Controls">

    <local:LicenseStatusElementConverter x:Key="LicenseStatusElementConverter"/>
    
    <Style TargetType="local:LicenseStatusElement">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:LicenseStatusElement">
                    <Grid Height="{TemplateBinding Height}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{TemplateBinding Module}" Margin="15,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock Text="{TemplateBinding ExpiredTime}" Margin="12,0,0,0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock Text="{TemplateBinding HasLicenseExired,Converter={StaticResource LicenseStatusElementConverter}}" 
                                   Foreground="{TemplateBinding HasLicenseExired,Converter={StaticResource LicenseStatusElementConverter},ConverterParameter=Color}"
                                   Margin="10,0,0,0" Grid.Column="2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>