<UserControl x:Class="MigratorTool.WPF.View.Controls.Tree.TreeWithRightClickMenuDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <UserControl.Resources>
        <HierarchicalDataTemplate x:Key="TreeHierarchicalDataTemplate" ItemsSource="{Binding Children}">
            <Grid Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Margin="-1,0,0,0" Width="16" Height="16" Source="{Binding Source='/Image/Common/tryout_16x16_normal.png', Converter={StaticResource ImageSourceConverter}}" Grid.Column="0"/>
                <TextBlock Text="{Binding Name}" TextWrapping="NoWrap" Grid.Column="1" Margin="2,0,0,0"/>
            </Grid>
        </HierarchicalDataTemplate >
    </UserControl.Resources>
    <TreeView ItemsSource="{Binding TreeItems,Mode=TwoWay}" ItemTemplate="{StaticResource TreeHierarchicalDataTemplate}"/>
</UserControl>
