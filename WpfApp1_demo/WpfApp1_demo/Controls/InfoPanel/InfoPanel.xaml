<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:aui="clr-namespace:AvePoint.Migrator.Common.Controls"
                    xmlns:converter="clr-namespace:MigratorTool.WPF.View.Common.Converter">

    <converter:ImageSourceConverter x:Key="ImageSourceConverter"/>
    
    <Style TargetType="aui:InfoPanel">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="BorderBrush" Value="#A3DCFF" />
        <Setter Property="Background" Value="#E6F4FF" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="aui:InfoPanel">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                        <StackPanel Orientation="Horizontal" Margin="3">
                            <StackPanel.Resources>
                                <Style TargetType="aui:HyperlinkButton" BasedOn="{StaticResource {x:Type aui:HyperlinkButton}}">
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Margin" Value="0 1 0 0"/>
                                </Style>
                            </StackPanel.Resources>
                            <Image Source="{TemplateBinding ImageSource,Converter={StaticResource ImageSourceConverter}}" Width="16" Height="16"/>
                            <ContentPresenter Content="{TemplateBinding Content}" Margin="5,2,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
