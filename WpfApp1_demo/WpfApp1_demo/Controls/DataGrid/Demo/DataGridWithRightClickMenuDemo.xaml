<UserControl x:Class="MigratorTool.WPF.View.Controls.DataGrid.Demo.DataGridWithRightClickMenuDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:AvePoint.Migrator.Common.Controls">
    <controls:DataGrid ItemsSource="{Binding ItemsSource}">
        <controls:DataGrid.Columns>
            <controls:DataGridTemplateColumn Header="Name" MinWidth="130" Width="*" IsReadOnly="True">
                <controls:DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy" Command="{Binding CopyComamnd}" Width="100"/>
                                    <MenuItem Header="Delete" Command="{Binding DeleteComamnd}"/>
                                    <MenuItem Header="Alert" Command="{Binding AlertComamnd}"/>
                                </ContextMenu>
                            </Grid.ContextMenu>
                            <TextBlock Text="{Binding Name}"/>
                        </Grid>
                    </DataTemplate>
                </controls:DataGridTemplateColumn.CellTemplate>
            </controls:DataGridTemplateColumn>
            <controls:DataGridTextColumn Header="Size" MinWidth="70" Width="*" IsReadOnly="True" Binding="{Binding Size}" />
        </controls:DataGrid.Columns>
    </controls:DataGrid>
</UserControl>
